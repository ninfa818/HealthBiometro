<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_marginStart="@dimen/dimen_txt_margin"
        android:layout_marginEnd="@dimen/dimen_txt_margin"
        android:layout_width="match_parent"
        android:layout_height="235dp"
        android:padding="20dp"
        android:background="@drawable/dialog_back"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lbl_title"
            style="@style/NanumTextMedium"
            android:layout_marginTop="8dp"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:text="@string/login_success"/>

        <TextView
            android:id="@+id/lbl_desc"
            style="@style/NanumTextLight"
            android:layout_marginTop="25dp"
            android:textSize="16sp"
            android:textColor="@color/color_text_dark_gray"
            android:lineSpacingExtra="12dp"
            android:text="@string/login_failed_desc"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/lbl_button"
            style="@style/NotoTextMedium"
            android:layout_gravity="end"
            android:textSize="15sp"
            android:textColor="@color/color_main"
            android:text="@string/confirm"/>
    </LinearLayout>

</LinearLayout>