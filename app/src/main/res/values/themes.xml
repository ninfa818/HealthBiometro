<resources>
    <style name="Theme.Biometro" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/color_main</item>

        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/teal_700</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DatePickerButtonStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DatePickerButtonStyle</item>
    </style>

    <style name="DatePickerButtonStyle" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/teal_700</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>

    <style name="TextTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="NanumTextBold" parent="TextTheme">
        <item name="fontFamily">@font/nanum_bold</item>
    </style>

    <style name="NanumTextMedium" parent="TextTheme">
        <item name="fontFamily">@font/nanum_medium</item>
    </style>

    <style name="NanumTextLight" parent="TextTheme">
        <item name="fontFamily">@font/nanum_light</item>
    </style>

    <style name="NotoTextBold" parent="TextTheme">
        <item name="fontFamily">@font/notosans_bold</item>
    </style>

    <style name="NotoTextMedium" parent="TextTheme">
        <item name="fontFamily">@font/notosans_medium</item>
    </style>

    <style name="NotoTextLight" parent="TextTheme">
        <item name="fontFamily">@font/notosans_light</item>
    </style>
</resources>